# This Makefile is generated by the made script:
# https://github.com/alx741/made
#
# Replace FILE with your filename
# Replace MMCU with the target chip model
#
# Dependencies:
# 	avr-gcc
# 	avr-binutils


FILE=program
MMCU=atmega32a

$(FILE).hex: $(FILE).elf
	avr-objcopy -j .text -j .data -O ihex $< $@

$(FILE).elf: $(FILE).c
	avr-gcc -g -mmcu=$(MMCU) -c $< -o $@

clean:
	rm -f $(FILE).elf $(FILE).c $(FILE).hex $(FILE)_read.hex
